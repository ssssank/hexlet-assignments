

<h1><%= @task.name %></h1>
<p><%= @task.description %></p>
<p>Status: <%= @task.status %></p>
<small>Completed: <%= @task.completed %></small><br>
<small>Performer: <%= @task.performer %></small><br>
<small>Creator: <%= @task.creator %> <i><%= @task.created_at.in_time_zone('Moscow').strftime("%H:%m %d.%m.%y") %></i></small>
<hr>

<%= link_to 'Back', tasks_path %>
<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Destroy', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>
